{
  "name": "vsc-maven",
  "displayName": "VSC Maven",
  "description": "Maven integration for vscode",
  "version": "1.0.1",
  "publisher": "contrapt",
  "engines": {
    "vscode": "^1.42.0"
  },
  "repository": {
    "url": "https://github.com/msimmons/vsc-maven"
  },
  "icon": "resources/maven.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:pom.xml"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "views": {},
    "commands": [
      {
        "title": "Maven: Refresh",
        "command": "maven.refresh"
      },
      {
        "title": "Maven: Run Task",
        "command": "maven.run-task"
      }
    ],
    "menus": {},
    "configuration": {
      "title": "Maven Configuration"
    },
    "problemMatchers": [
      {
        "name": "maven",
        "pattern": {
          "regexp": "^\\[(.*)]\\s+(.*):\\[\\d+,\\d+]\\s+(.*)$",
          "severity": 1,
          "file": 2,
          "line": 3,
          "column": 4,
          "message": 5
        },
        "source": "maven",
        "fileLocation": "absolute"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile; ./gradlew build deploy",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.48",
    "@types/node": "^8.10.59",
    "@types/vscode": "^1.42.0",
    "mocha": "^10.2.0",
    "typescript": "^3.5.1"
  },
  "dependencies": {
    "node-uuid": "^1.4.8"
  },
  "extensionDependencies": [
    "contrapt.jvmcode"
  ]
}
